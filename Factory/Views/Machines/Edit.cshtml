@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>EDIT:</h1>

<h4>Edit this Machine: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  <div class="inputspacing">
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.Name, "Name:" , new { @class="customLabel"})
  @Html.TextBoxFor(model => model.Name)
  
  @Html.LabelFor(model => model.Description, "Description:" , new { @class="customLabel"})
  @Html.EditorFor(model => model.Description)
  
  
  </div>
}
<p>@Html.ActionLink("Back to Machines", "Index", null, null, new { @class="htmlButton"})</p>